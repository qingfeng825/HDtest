<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.lijinming.hdtest.HeartMessage.ThirdFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.lijinming.hdtest.DataPlayBack.WaveView
            android:id="@+id/surfaceView1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TableLayout android:layout_width="wrap_content"
                 android:layout_height="match_parent">
        <TableRow>
            <Spinner
                android:id="@+id/dataPlayBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/DataPlayBack"
                android:spinnerMode="dialog"
                android:background="@color/DataPlayBack"
                />
            <ToggleButton
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOff="停止"
                android:textOn="开始"
                android:checked="false"
    />

    </TableRow>
    </TableLayout>
    </LinearLayout>

    </FrameLayout>
